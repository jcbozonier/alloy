<Window x:Class="Unite.UI.Views.UserCredentialsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="250"
    Height="125"
    Title="Unite.UI by Justin Bozonier">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="User Name:" Padding="0,0,5,0" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="Password:" Padding="0,0,5,0" Grid.Row="1" Grid.Column="0"/>
        
        <TextBox x:Name="UserName" Text="{Binding UserName}" Grid.Row="0" Grid.Column="1" />
        <TextBox x:Name="Password" Text="{Binding Password}"  Grid.Row="1" Grid.Column="1" />
        
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Ok" Click="Button_Click" />
    </Grid>
</Window>
