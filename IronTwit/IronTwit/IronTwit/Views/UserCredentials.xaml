<Window x:Class="IronTwit.Views.UserCredentialsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="200"
    Height="Auto"
    Title="IronTwit by Justin Bozonier">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="User Name:" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="Password:" Grid.Row="1" Grid.Column="0"/>
        
        <TextBox x:Name="UserName" Grid.Row="0" Grid.Column="1" MinWidth="150" />
        <TextBox x:Name="Password" Grid.Row="1" Grid.Column="1" MinWidth="150" />
        
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Ok" Click="Button_Click" />
    </Grid>
</Window>
