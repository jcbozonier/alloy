<UI:DraggableWindow x:Class="Unite.UI.Views.UserCredentialsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:UI="clr-namespace:Unite.UI" 
    mc:Ignorable="d" 
    Title="{Binding Path=Caption}" SizeToContent="WidthAndHeight" ShowInTaskbar="False" FocusManager.FocusedElement="{Binding ElementName=UserName}" Background="{DynamicResource LightGradientBackGround}" WindowStyle="None" AllowsTransparency="True">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="User Name:" Margin="0,5" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right"/>
            <TextBlock Text="Password:" Margin="0,5" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"/>

            <TextBox x:Name="UserName" Margin="5,5,0,0" Text="{Binding Path=UserName}" Grid.Row="0" Grid.Column="1"/>
            <PasswordBox x:Name="Password" Margin="5,5,0,0" Grid.Row="1" Grid.Column="1" PasswordChanged="Password_PasswordChanged" />

            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button Content="Ok" IsDefault="True" Width="50" Click="Ok_Click" />
                <Button Content="Cancel" IsCancel="True" Width="50" Margin="10,0,0,0" Click="Cancel_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UI:DraggableWindow>
